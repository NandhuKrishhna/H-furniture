<style>
  .main-content {
    padding-left: 100px;
    padding-top: 27px;
    font-family: 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  }

  .coupon {
    border: 1px solid #ccc;
    border-radius: 5px;
    padding: 20px;
    text-align: left;
    margin-bottom: 20px; 
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    background-color: #ffffff; 
    width: 280px;
  }

  .coupon:hover {
    transform: scale(1); 
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2); 
  }

  .coupon p {
    margin-bottom: 10px; 
    font-size: 14px; 
  }

  .coupon button {
    margin-top: 10px;
  }
  .copy-btn{
    border-radius: 0;
    width: 100px;
  }
  .copy-btn :hover{
    background-color: #626363;
  }
  .custom-swal-font {
  font-family: 'Calibri', sans-serif; 
  font-size: 16px; 

}

.custom-breadcrumb {
  background-color: transparent;
  padding: 0;
  margin: 0;
  list-style: none;
}

.custom-breadcrumb .breadcrumb-item {
  display: inline-block;
  font-size: 16px;
  color: #555; 
}

.custom-breadcrumb .breadcrumb-item a {
  text-decoration: none;
  color: #007bff;
}

.custom-breadcrumb .breadcrumb-item.active {
  color: #6c757d; 
}

.custom-breadcrumb .breadcrumb-item + .breadcrumb-item::before {
  content: ">";
  color: #6c757d;
}
.breadcrumb-body {
    padding-top: 96px;
    padding-bottom: 0px;
    padding-left: 39px;
}

</style>

<div class="container-fluid">
  <div class="row">
    <nav class="breadcrumb-body" aria-label="breadcrumb">
      <ol class="breadcrumb custom-breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><a href="/user/my-account">My Account</a></li>
        <li class="breadcrumb-item active" aria-current="page">Coupons</li>
      </ol>
    </nav>
   <%- include('../partials/userSidenav.ejs') %>
    <main role="main" class="col-md-9 main-content">
      <h4 style="font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;">Coupons & Vouchers</h4>
      <div class="row">
        <% coupons.forEach(coupon => { %>
          <div class="col-md-4">
            <div class="coupon">
              <p><strong>Code:</strong> <%= coupon.code %></p>
              <p><strong>Max Discount:</strong> <%= coupon.maxDiscount ? coupon.maxDiscount : 'N/A' %></p>
              <p><strong>Min Purchase:</strong> <%= coupon.minPurchaseAmount ? coupon.minPurchaseAmount : 'N/A' %></p>
              <p style="color: green;"><strong>Valid From:</strong> <%= new Date(coupon.validFrom).toLocaleDateString() %></p>
              <p style="color: rgb(164, 24, 24); " ><strong>Valid Until:</strong> <%= new Date(coupon.validUntil).toLocaleDateString() %></p>
              <button class="btn btn-dark copy-btn" data-code="<%= coupon.code %>">Copy</button>
            </div>
          </div>
        <% }); %>
      </div>
    </main>
  </div>
</div>

  <script>
 document.addEventListener('DOMContentLoaded', function() {
  document.querySelectorAll('.copy-btn').forEach(button => {
    button.addEventListener('click', function() {
      const code = this.getAttribute('data-code');
      const tempInput = document.createElement('input');
      tempInput.value = code;
      document.body.appendChild(tempInput);
      tempInput.select();
      document.execCommand('copy');
      document.body.removeChild(tempInput);
      Swal.fire({
        icon: 'success',
        title: 'Copied!',
        text: 'Coupon code copied: ' + code,
        showConfirmButton: false,
        timer: 1500,
        customClass: {
          title: 'custom-swal-font',
          content: 'custom-swal-font',
           popup: 'custom-swal-background'
        }
      });
    });
  });
});

  </script>
