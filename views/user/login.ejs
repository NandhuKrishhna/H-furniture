<div class="container">
  <div class="row align-items-center min-vh-100">
    <div class="col-md-6 d-none d-md-block">
      <img style="height: 390px; border-radius: 5px;" src="/images/interior-design-with-photoframes-couch-min.jpg" class="img-fluid" alt="Responsive image">
    </div>
    <div class="col-md-6">
      <div class="login-form p-4">
        <h3 class="mb-4 text-center">User Login</h3>

     <div id="formErrors" class="alert alert-danger" style="display:none;"></div>
        <form  id="loginForm">
          <div class="form-group">
            <input type="" class="form-control" id="email" name="email" placeholder=" " >
            <label for="email">Email Address</label>
            <div id="emailError" class="text-danger"></div>
          </div>

          <div class="form-group">
            <input type="password" class="form-control" id="password" name="password" placeholder=" ">
            <label for="password">Password</label>
            <i class="fa-solid fa-eye-slash toggle-password" id="togglePassword" style="cursor:pointer;"></i>
            <div id="passwordError" class="text-danger"></div>
          </div>
  
          
          <div class="mt-3">
            <button type="submit" class="btn btn-dark btn-block">Login</button>
          </div>

          <div class="text-center mt-2">
            <a href="/user/forgot-password" class="text-dark">Forgot Password?</a>
          </div>
        </form>

        <div class="text-center mt-3">
          <p>New to Mazen Furniture?</p>
          <a href="/user/signup" class="btn btn-outline-dark">Create Account</a>
        </div>
      </div>
    </div>
  </div>
</div>
<% if (blocked) { %>
  <script>
    Swal.fire({
      icon: 'error',
      title: 'Account Blocked',
      text: 'Your account has been blocked. Please contact support.',
      confirmButtonText: 'OK'
    });
  </script>
<% } %>
