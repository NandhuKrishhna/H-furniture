<style>
  .product-card {
    margin-bottom: 20px;
    width: 200px;
    /* Set the width to match the image width */
  }

  .product-card img {
    width: 200px;
    height: 200px;
    object-fit: cover;
  }

  .product-card .card-body {
    padding: 15px;
  }

</style>
</head>

<body>
  <div class="container-fluid">
    <div class="row mt-4">
      <!-- Sidebar -->
      <div class="col-md-3">
        <h5>Browse by</h5>
        <div class="mb-3">
          <h6>Product Type</h6>
          <!-- Add your filter options here -->
        </div>
        <div class="mb-3">
          <h6>Price</h6>
          <!-- Price filter -->
          <input type="range" class="form-control-range">
          <div class="d-flex justify-content-between">
            <input type="number" class="form-control" placeholder="Min">
            <input type="number" class="form-control" placeholder="Max">
          </div>
        </div>
        <div class="mb-3">
          <h6>Size</h6>
          <!-- Add your filter options here -->
        </div>
        <!-- Add more filters as needed -->
      </div>

      <!-- Main Content -->
      <div class="col-md-9">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h5>{{products.length}} Results</h5>
          <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="sortMenu" data-toggle="dropdown"
              aria-haspopup="true" aria-expanded="false">
              Sort: Featured
            </button>
            <div class="dropdown-menu" aria-labelledby="sortMenu">
              <a class="dropdown-item" href="#">Price: Low to High</a>
              <a class="dropdown-item" href="#">Price: High to Low</a>
              <a class="dropdown-item" href="#">Newest Arrivals</a>
            </div>
          </div>
        </div>

<div class="container">
  <div class="row">
    {{#each products}}
      <div class="col-lg-4 col-md-4 col-sm-6 mb-4">
        <div class="card h-100">
          <!-- Clickable image -->
          <div style="position: relative;">
            <a href="/user/product/{{this._id}}" class="product-link" data-id="{{this.id}}">
              <img src="/{{this.images.[0]}}" class="card-img-top" alt="{{this.productName}}">
            </a>
            <span class="badge badge-dark" style="position: absolute; top: 10px; left: 10px; font-weight: 700;">
              Ready to Ship
            </span>
          </div>
          <div class="card-body">
            <h5 class="card-title">{{this.productName}}</h5>
            
            {{#if this.discount}}
              <p class="card-text text-muted">
                <span style="text-decoration: line-through;">₹{{this.originalprice}}</span>
                <span style="font-weight: 700;">₹{{calculateDiscountedPrice this.originalprice this.discount}}</span>
              </p>
              <p style="color: coral; font-weight: 700;">{{this.discount}}% off</p>
            {{else}}
              <p class="card-text text-muted" style="font-weight: 700;">₹{{this.originalprice}}</p>
            {{/if}}

            <!-- Add to Cart button (removed for image click functionality) -->
          </div>
        </div>
      </div>
      {{#mod @index 3}}
        <div class="w-100 d-none d-sm-block d-md-none"></div>
      {{/mod}}
    {{/each}}
  </div>
</div>

<!-- Product Details Container -->
<div id="product-details-container" style="display:none;">
  <!-- Product details will be loaded here -->
</div>



</div>
</div>
</div>

<script>
$(document).ready(function() {
  $('.product-link').on('click', function(event) {
    event.preventDefault(); // Prevent default link behavior

    var productId = $(this).data('id');
    
    // Redirect to the product details page
    window.location.href = '/user/product/' + productId;
  });
});

</script>