<style>

.card {
  margin-bottom: 20px;
  width: 273px;
  gap: 10px;
  height: 400px;
  border-radius: 0;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease-in-out;
  overflow: hidden; /* Ensure image doesn't overflow the card */
}

.card:hover {
  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
}

.card img {
  width: 100%;
  height: 270px;
  object-fit: cover;
  transition: transform 0.3s ease-in-out; /* Add transition for image effect */
}

.card:hover img {
  transform: scale(1.05); /* Slightly zoom the image on hover */
}

.product-card .card-body {
  padding: 15px;
}

.wishlist-heart {
  cursor: pointer;
  color: #ffffff;
  /* Default color */
}

.wishlist-heart.clicked {
  color: rgb(0, 0, 0);
}

.image-container {
  position: relative;
  display: inline-block;
}

.wishlist-heart {
  position: absolute;
  top: 10px;
  right: 10px;
  font-size: 24px;
  z-index: 10;
}

.main-body {
  padding-top: 50px;
}

.dropdown {
  margin-right: 60px;
}

.dropdown-toggle {
  border-radius: 0;
  border: none;
  border-color: #ffffff;
}

.dropdown-toggle:focus {
  box-shadow: none;
}

.image-container {
  position: relative;
}

.container {
  padding-left: 50px;
}

.dropdown-toggle {
  position: absolute;
  right: 20px;
  top: -13px;
}


</style>



<div class="container-fluid main-body">
  <div class="row mt-4">
    <!-- Updated Sidebar -->
    

    <!-- Main Content -->
    <div class="dropdown">
      <button class="btn btn-default dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        Sort: Featured 
      </button>
      <ul class="dropdown-menu" role="menu">
        <li><a class="dropdown-item" href="?sort=price_asc">Price: Low to High</a></li>
        <li><a class="dropdown-item" href="?sort=price_desc">Price: High to Low</a></li>
        <li><a class="dropdown-item" href="?sort=name_asc">Name: A to Z</a></li>
        <li><a class="dropdown-item" href="?sort=name_desc">Name: Z to A</a></li>
        <li><a class="dropdown-item" href="?sort=newest">Newest</a></li>
      </ul>
    </div>
    <div class="container">
      <div id="product-list" class="row">
        <% products.forEach(function(product) { %>
          <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="card">
              <!-- Image container with wishlist button -->
              <div class="image-container">
                <a href="/user/product/<%= product._id %>" class="product-link" data-id="<%= product._id %>">
                  <img src="/<%= product.images[0] %>" class="card-img-top" alt="<%= product.productName %>">
                </a>
  
              </div>
              <div class="card-body">
                <span class="badge badge-dark" style="position: absolute; top: 10px; left: 10px; font-weight: 700; border-radius: 0;">
                  Ready to Ship
                </span>
                <p class="card-title" style="font-size: 12px;"><%= product.productName %></p>
                <p class="card-text text-muted">
                  <% if (product.discount) { %>
                    <span style="text-decoration: line-through; font-size: small;">₹<%= product.originalprice %></span>
                    <span style="font-weight: 800;color: black;">₹<%= calculateDiscountedPrice(product.originalprice, product.discount) %></span>
                    <span style="color: coral; font-weight: 700;"><%= product.discount %>% OFF</span>
                  <% } else { %>
                    <span style="font-weight: 700;">₹<%= product.originalprice %></span>
                  <% } %>
                </p>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
      <nav aria-label="Page navigation">
        <ul id="pagination" class="pagination justify-content-center mt-4">
          <% if (totalProducts > 0) { %>
            <% for (let i = 1; i <= totalPages; i++) { %>
              <% if (i === page) { %>
                <li class="page-item active m-0">
                  <a href="#" class="page-link" data-page="<%= i %>"><%= i %></a>
                </li>
              <% } else { %>
                <li class="page-item">
                  <a href="#" class="page-link" data-page="<%= i %>"><%= i %></a>
                </li>
              <% } %>
            <% } %>
          <% } %>
        </ul>
      </nav>
    </div>
  
      
    
    
