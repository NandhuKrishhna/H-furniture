<div class="container">
  <div class="row align-items-center min-vh-100">
    <div class="col-md-6 d-none d-md-block">
      <img src="/images/blocks-P5mBXg1sFDA-unsplash.jpg" class="img-fluid" alt="Responsive image">
    </div>
    <div class="col-md-6">
      <div class="login-form p-4">
        <h3 class="mb-4 text-center">User Login</h3>

        <form action="/user/signup" method="post">
          <div class="form-group">
            <input type="text" class="form-control" id="fname" name="fname" placeholder=" ">
            <label for="fname"> First Name</label>
            {{#if errors.fname}}
            <div class="text-danger">{{errors.fname.msg}}</div>
            {{/if}}
          </div>
          <div class="form-group">
            <input type="text" class="form-control" id="lname" name="lname" placeholder=" ">
            <label for="lname"> Last Name</label>
            {{#if errors.lname}}
            <div class="text-danger">{{errors.lname.msg}}</div>
            {{/if}}
          </div>
          <div class="form-group">
            <input type="email" class="form-control" id="email" name="email" placeholder=" ">
            <label for="email"> Email</label>
            {{#if errors.email}}
            <div class="text-danger">{{errors.email.msg}}</div>
            {{/if}}
          </div>
          <div class="form-group">
            <input type="password" class="form-control" id="password" name="password" placeholder=" ">
            <label for="password"> Password</label>
            {{#if errors.password}}
            <div class="text-danger">{{errors.password.msg}}</div>
            {{/if}}
          </div>
          <div class="form-group">
            <input type="text" class="form-control" id="phone" name="phone" placeholder=" ">
            <label for="phone"> Phone No</label>
            {{#if errors.phone}}
            <div class="text-danger">{{errors.phone.msg}}</div>
            {{/if}}
          </div>
          <div class="mt-3">
            <button type="submit" class="btn btn-dark btn-block">Sign Up</button>
          </div>
        </form>

        <div class="col-lg-12 d-flex justify-content-center my-3" style="color: gray;">
          <span class="text-center">Already Have an Account? <a style="color: #aaa;" href="/user/login">Login</a></span>
        </div>
        <a href="/auth/google" class="btn btn-outline-secondary my-3" style="width: 100%">
          <i class="fa-brands fa-google"></i> <span>Login with Google</span>
        </a>
      </div>
    </div>
  </div>
</div>

<style>
  body {
    background-color: #f8f9fa;
  }

  .login-form {
    background: #ffffff;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }

  .login-form h3 {
    font-weight: bold;
  }

  .form-control {
    border-radius: 5px;
  }

  .btn-block {
    border-radius: 5px;
  }

  .form-control:focus {
    box-shadow: none;
    border-color: none;
    outline: none;
  }

