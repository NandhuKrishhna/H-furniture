<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create Account</title>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap');

    .split-screen {
      display: flex;
    }

    .left {
      flex: 1;
      background: url('path/to/your/image.jpg') no-repeat center center;
      background-size: cover;
      font-family: 'Roboto', sans-serif;
    }

    .right {
      flex: 1;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .form-container {
      width: 100%;
      max-width: 400px;
      padding: 20px;
    }
  </style>
</head>

<body>
  <div class="split-screen">
    <div class="left">
      <!-- Image or other content -->
    </div>
    <div class="right">
      <div class="form-container text-center">
        <h2 style="font-size: 20px;">Create Account</h2>
        <form id="signupForm" action="/users/signup" method="post">
          <div class="form-group mt-3">
            <input type="text" class="form-control" id="firstName" name="firstName" placeholder="First Name">
            <div class="firstName-error"></div>
          </div>
          <div class="form-group">
            <input type="text" class="form-control" id="lastName" name="lastName" placeholder="Last Name">
            <div class="lastName-error"></div>
          </div>

          <div class="form-group">
            <input type="email" class="form-control" id="email" name="email" placeholder="Email Address">
            <div class="email-error"></div>
          </div>
          <div class="form-group">
            <input type="password" class="form-control" id="password" name="password" placeholder="Password">
            <div class="password-error"></div>
          </div>

          <div class="form-group">
            <input type="text" class="form-control" id="phone" name="phone" placeholder="Phone No">
            <div class="phone-error"></div>
          </div>
          <button type="submit" class="btn btn-dark btn-block">Create Account</button>
        </form>
        <p class="mt-3">Already have an account? <a href="/users/login">Login</a></p>
      </div>
    </div>
  </div>
  <script>


    const form = document.getElementById('signupForm');
    const firstNameErr = document.querySelector('.firstName-error');
    const lastNameErr = document.querySelector('.lastName-error');
    const emailErr = document.querySelector('.email-error');
    const passwordErr = document.querySelector('.password-error');
    const phoneErr = document.querySelector('.phone-error');

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      firstNameErr.textContent = '';
      lastNameErr.textContent = '';
      emailErr.textContent = '';
      passwordErr.textContent = '';
      phoneErr.textContent = '';

      const firstName = form.firstName.value
      const lastName = form.lastName.value
      const email = form.email.value
      const password = form.password.value
      const phone = form.phone.value

      try {

        const res = await fetch('/users/signup', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            firstName,
            lastName,
            email,
            password,
            phone
          })
        })

        const data = await res.json()
        console.log(data)
        if(data.errors){
          firstNameErr.textContent = data.errors.firstName
          lastNameErr.textContent = data.errors.lastName
          emailErr.textContent = data.errors.email
          passwordErr.textContent = data.errors.password
          phoneErr.textContent = data.errors.phone
        }
        if(data.user){
          location.assign('/users/home')
        }
      }
      catch (err) {
        console.log(err)
      

    }
    })
  </script>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>