<script>
    const hamBurger = document.querySelector(".toggle-btn");

    hamBurger.addEventListener("click", function () {
        document.querySelector("#sidebar").classList.toggle("expand");
    });

    $(document).ready(function () {
    // Handle Edit button click with event delegation
    $(document).on('click', '.edit-category-button', function () {
        var categoryId = $(this).data('category-id');
        window.location.href = '/admin/category/edit-category/' + categoryId;
    });

    // Handle Delete button click with SweetAlert2 and event delegation
    $(document).on('click', '.category-delete-icon', function () {
        var categoryId = $(this).data('category-id');

        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '/admin/category/delete-category/' + categoryId,
                    type: 'DELETE',
                    success: function (response) {
                        Swal.fire(
                            'Deleted!',
                            'The category has been deleted.',
                            'success'
                        ).then(() => {
                            // Reload the page or remove the category from the DOM
                            location.reload();
                        });
                    },
                    error: function (err) {
                        Swal.fire(
                            'Error!',
                            'There was an error deleting the category.',
                            'error'
                        );
                    }
                });
            }
        });
    });
});



</script>