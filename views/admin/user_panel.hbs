    <div class="sidebar-footer">
      <button class="logout-btn" id="logout-btn">
        <i class="lni lni-exit"></i>
        <span>Logout</span>
      </button>
    </div>
  </aside>
  <div class="main p-3">
    <!-- Main content here -->
    <div class="container">
      <h1>User List</h1>
      <div class="row">
        <div class="col-md-12">
          <input type="text" id="search" class="form-control" placeholder="Search users...">
          <table class="table mt-3">
            <table class="table mt-3">
              <thead>
                <tr>
                  <th>Username</th>
                  <th>Email</th>
                  <th>Phone</th>
                  <th>Status</th>
                  <th>Created At</th>
                  <th>Updated At</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                {{#each users}}
                <tr>
                  <td>{{this.firstName}} {{this.lastName}}</td>
                  <td class="text-truncate">{{this.email}}</td>
                  <td>{{this.phone}}</td>
                  <td><button class="btn btn-{{#if isBlocked}}danger{{else}}success{{/if}}">{{#if
                      isBlocked}}Blocked{{else}}Active{{/if}}</button></td>
                  <td>{{this.createdAt}}</td>
                  <td>{{this.updatedAt}}</td>
                  <td>{{#if isBlocked}}<button class="btn unblock-button" data-user-id={{this._id}}><i class="user-blocked-icon{{this._id}}
                      fa-solid text-danger fa-user-slash"></i></button>{{else}}<button class="btn px-2 block-button"
                      data-user-id={{this._id}}><i class="user-block-icon{{this._id}}
                      fa-solid text-success fa-user"></i></button>{{/if}}</td>
                </tr>
                {{/each}}
              </tbody>
            </table>

        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal HTML -->
<div class="modal fade" id="imageCropModal" tabindex="-1" aria-labelledby="imageCropModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content bg-dark">
      <div class="modal-header">
        <h5 class="modal-title text-white" id="imageCropModalLabel">ALERT</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div style="height:fit-content; width:100%;">
        <div class="row p-2">
          <span class="d-flex justify-content-center font-weight-bold text-white fs-6 p-2 modal-body-alert">

          </span>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" id="cancel_crop_button" class="btn btn-light" style="width:fit-content;"
          data-bs-dismiss="modal">Cancel</button>
        <button style="width: 110px;" id="confirmAction" type="button" class="btn btn-danger">Confirm</button>
      </div>
    </div>
  </div>
</div>
<button id="alert-button" class="btn" hidden data-bs-toggle="modal" data-bs-target="#imageCropModal"></button>
<div class="modal fade" id="alertModal" tabindex="-1" aria-labelledby="imageCropModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content bg-dark">
      <div class="modal-header">
        <h5 class="modal-title text-white" id="imageCropModalLabel">ALERT</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div style="height:fit-content; width:100%;">
        <div class="row p-2">

          <div class="d-flex justify-content-center align-items-center">
            <div>
              <span class="font-weight-bold text-white fs-6 px-3 me-2 modal-body-msg">

              </span>
            </div>
            <div class="loader">

            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" id="cancel_button" class="btn btn-danger text-white" style="width:fit-content;"
          data-bs-dismiss="modal">Cancel</button>

      </div>
    </div>
  </div>
</div>
<button id="msg-button" hidden class="btn" data-bs-toggle="modal" data-bs-target="#alertModal"></button>



<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
