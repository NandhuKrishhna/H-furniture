                        </div>
                    </div>
   <table id="example" class="table table-striped nowrap" style="width:100%">
      <thead>
        <tr>
          <th>CATEGORY</th>

          <th>CREATED AT</th>
          <th>UPDATED AT</th>

          <th style="width: 100px;">ACTIONS</th>
        </tr>
      </thead>
<tbody>
    {{#each category}}
        <tr>
            <td>{{categoryName}}</td>
            <td>{{createdAt}}</td>
            <td>{{updatedAt}}</td>

            <td><button class="btn"><i
                  id="edit-category-button"
                  class="fa-solid fa-pen-to-square"
                  data-category-id={{this._id}}
                ></i></button>
              <button class="btn"><i
                  id="category-delete-icon"
                  class="text-danger fa-solid fa-trash"
                  data-category-id={{this._id}}
                ></i></button></td>
    {{/each}}
</tbody>
    </table>
