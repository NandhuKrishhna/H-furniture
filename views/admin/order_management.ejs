<%- include('../partials/adminSideNav.ejs') %>
<div class="main">
  <div style="margin-top: 50px; margin-right:50px;">
      <h1 style="position: relative; left: 80px;" class="text-start">ORDER MANAGEMENT</h1>
  </div>
  <div class="container">
    <div style="margin-bottom: 50px;">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>TRANSACTION ID</th>
            <th>PRODUCT NAME</th>
            <th>STATUS</th>
            <th>TIME</th>
            <th>QUANTITY</th>
            <th>PRICE</th>
            <th>ACTIONS</th>
          </tr>
        </thead>
        <tbody>
          <% orders.forEach(order => { %>
            <% if (order.orderItems) { %>
              <% order.orderItems.forEach(item => { %>
                <tr>
                  <td style="font-size: small;"><%= item.transactionId %></td>
                  <td><%= item.name %></td>
                  <td><%= order.orderStatus %></td>
                  <td><%= new Date(order.orderDate).toLocaleDateString() %></td>
                  <td><%= item.quantity %></td>
                  <td>â‚¹<%= item.price.toFixed(2) %></td>
                  <td>
                    <button class="btn btn-dark edit-status-button" data-order-id="<%= order._id %>">Edit</button>
                  </td>
                </tr>
              <% }); %>
            <% } %>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
  




  <div class="modal fade" id="imageCropModal" tabindex="-1" aria-labelledby="imageCropModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content bg-dark">
        <div class="modal-header">
          <h5 class="modal-title text-white" id="imageCropModalLabel">ALERT</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
  
        <div style="height:fit-content; width:100%;">
          <div class="row p-2">
            <span class="d-flex justify-content-center font-weight-bold text-white fs-6 p-2 modal-body-alert">
            </span>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" id="cancel_crop_button" class="btn btn-light" style="width:fit-content;"
            data-bs-dismiss="modal">Cancel</button>
          <button style="width: 110px;" id="confirmAction" type="button" class="btn btn-danger">Confirm</button>
        </div>
      </div>
    </div>
  </div>
  <button id="alert-button" class="btn" hidden data-bs-toggle="modal" data-bs-target="#imageCropModal"></button>
  
  <div class="modal fade" id="alertModal" tabindex="-1" aria-labelledby="imageCropModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
      <div class="modal-content bg-dark">
        <div class="modal-header">
          <h5 class="modal-title text-white" id="imageCropModalLabel">ALERT</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
  
        <div style="height:fit-content; width:100%;">
          <div class="row p-2">
            <div class="d-flex justify-content-center align-items-center">
              <div>
                <span class="font-weight-bold text-white fs-6 px-3 me-2 modal-body-msg">
                </span>
              </div>
              <div class="loader">
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" id="cancel_button" class="btn btn-danger text-white" style="width:fit-content;"
            data-bs-dismiss="modal">Cancel</button>
  
        </div>
      </div>
    </div>
  </div>
  <button id="msg-button" hidden class="btn" data-bs-toggle="modal" data-bs-target="#alertModal"></button>
  
 
  <script>
 $(document).ready(function() {
  $('.edit-status-button').click(function() {
    var orderId = $(this).data('order-id');
    
    Swal.fire({
      title: 'Enter new status',
      input: 'select',
      inputOptions: {
        'Pending': 'Pending',
        'Processing': 'Processing',
        'Shipped': 'Shipped',
        'Delivered': 'Delivered',
        'Cancelled': 'Cancelled'
      },
      inputPlaceholder: 'Select status',
      showCancelButton: true,
    }).then((result) => {
      if (result.isConfirmed) {
        var newStatus = result.value;
        
        if (newStatus) {
          $.ajax({
            url: '/admin/orders/update-status', 
            method: 'POST',
            data: {
              orderId: orderId,
              status: newStatus 
            },
            success: function(response) {
              Swal.fire({
                icon: 'success',
                title: 'Order status updated successfully',
                showConfirmButton: false,
                timer: 1500
              }).then(() => {
                location.reload(); 
              });
            },
            error: function(xhr, status, error) {
              Swal.fire({
                icon: 'error',
                title: 'Error updating order status',
                text: 'Please try again later.',
              });
            }
          });
        }
      }
    });
  });
});

document.addEventListener("DOMContentLoaded", function () {
  const hamBurger = document.querySelector(".toggle-btn");
  hamBurger.addEventListener("click", function () {
    document.querySelector("#sidebar").classList.toggle("expand");
  });
});

  </script>