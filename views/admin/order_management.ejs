  <div class="main p-3">
    <div>
      <h1 style="position: relative; left: 80px;" class="text-start">ORDER MANAGEMENT</h1>
    </div>
    <div class="container">
      <div style="margin-bottom: 50px;">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>ORDER ID</th>
              <th>PRODUCT NAME</th>
              <th>STATUS</th>
              <th>TIME</th>
              <th>QUANTITY</th>
              <th>PRICE</th>
              <th>RETURN REQUEST</th> 
              <th>DETAILS</th>
              <th>ACTIONS</th>
            </tr>
          </thead>
          <tbody>
            <% orders.forEach(order=> { %>
              <% if (order.orderItems) { %>
                <% order.orderItems.forEach(item=> { %>
                  <tr>
                    <td style="font-size: small;">
                      <%= order.orderId %>
                    </td>
                    <td>
                      <%= item.name %>
                    </td>
                    <td>
                      <%= item.status %>
                    </td> 
                    <td>
                      <%= new Date(order.orderDate).toLocaleDateString() %>
                    </td>
                    <td>
                      <%= item.quantity %>
                    </td>
                    <td>â‚¹<%= item.price.toFixed(2) %>
                    </td>
                    <td>
                      <% if (item.returnRequest && item.returnRequest.status) { %>
                        <% if (item.returnRequest.status==='Pending' ) { %>
                          <span class="badge badge-warning">Pending</span>
                          <% } else if (item.returnRequest.status==='Approved' ) { %>
                            <span class="badge badge-success">Approved</span>
                            <% } else if (item.returnRequest.status==='Rejected' ) { %>
                              <span class="badge badge-danger">Rejected</span>
                              <% } %>
                                <% } else { %>
                                  <span class="badge badge-secondary">No Request</span>
                                  <% } %>
                    </td>

                    <td>
                      <button class="details-order-btn btn-dark" data-order-id="<%= order._id %>"
                        data-item-id="<%= item._id %>">Details</button>
                    </td>
                    <td>
                      <button class="btn btn-dark edit-status-button" data-order-id="<%= order._id %>"
                        data-item-id="<%= item._id %>">Edit</button>
                    </td>
                  </tr>
                  <% }); %>
                    <% } %>
                      <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function () {
    $('.edit-status-button').click(function () {
      var orderId = $(this).data('order-id');
      var itemId = $(this).data('item-id');

      Swal.fire({
        title: 'Enter new status',
        input: 'select',
        inputOptions: {
          'Order Placed': 'Order Placed',
          'Pending': 'Pending',
          'Processing': 'Processing',
          'Shipped': 'Shipped',
          'Delivered': 'Delivered',
          'Returned': 'Returned',
          'Cancelled': 'Cancelled'
        },
        inputPlaceholder: 'Select status',
        showCancelButton: true,
      }).then((result) => {
        if (result.isConfirmed) {
          var newStatus = result.value;

          if (newStatus) {
            $.ajax({
              url: '/admin/orders/update-status',
              method: 'POST',
              data: {
                orderId: orderId,
                itemId: itemId,
                status: newStatus
              },
              success: function (response) {
                Swal.fire({
                  icon: 'success',
                  title: 'Product status updated successfully',
                  showConfirmButton: false,
                  timer: 1500
                }).then(() => {
                  location.reload();
                });
              },
              error: function (xhr, status, error) {
                Swal.fire({
                  icon: 'error',
                  title: 'Error updating product status',
                  text: 'Please try again later.',
                });
              }
            });
          }
        }
      });
    });
  });

  document.querySelectorAll('.details-order-btn').forEach(button => {
    button.addEventListener('click', function () {
      const orderId = this.getAttribute('data-order-id');
      const itemId = this.getAttribute('data-item-id');


      window.location.href = `/admin/order/${orderId}/item/${itemId}`;
    });
  });


  document.addEventListener("DOMContentLoaded", function () {
    const hamBurger = document.querySelector(".toggle-btn");
    hamBurger.addEventListener("click", function () {
      document.querySelector("#sidebar").classList.toggle("expand");
    });
  });

</script>