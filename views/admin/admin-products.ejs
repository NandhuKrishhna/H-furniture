<style>
  .add-button {
    position: absolute;
    right: -80px;
    top: 14px;
    height: 34px;
  }
</style>
<%- include('../partials/adminSideNav.ejs') %>
    <div class="main">
        <div style="margin-top: 50px; margin-right:50px;">
            <h1 style="position: relative; left: 80px;" class="text-start">PRODUCTS</h1>
        </div>
        <div class="container">
            <div style="margin-bottom: 50px;">
                <!-- Your main content goes here -->
                <div class="d-flex justify-content-start mb-3" style="position: relative; left: 2px;">
                    <div style="width: 300px;">
                        <!-- <input type="text" class="form-control" placeholder="Search" id="search-input"> -->
                    </div>
                    <div class="d-flex align-items-center ms-3">
                        <!-- <button class="btn btn-dark me-2" id="search-btn">Search</button> -->
                        <a href="/admin/products/add-product" class="btn btn-danger add-button">ADD</a>
                    </div>
                </div>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>IMAGE</th>
                            <th>NAME</th>
                            <th>PRICE</th>
                            <th>DISCOUNT(%)</th>
                            <th>STOCK</th>
                            <th>CATEGORY</th>
                            <th>QUANTITY</th>
                            <th>BRAND</th>
                            <th>CREATED-AT</th>
                            <th>UPDATED-AT</th>
                            <th>ACTIONS</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% productsData.forEach(product => { %>
                            <tr>
                                <td><img src="/<%= product.images[0] %>" class="card-img-top" alt="<%= product.productName %>" style="width: 70px;"></td>
                                <td><%= product.productName %></td>
                                <td><%= product.originalprice %></td>
                                <td><%= product.discount %></td>
                                <% if (product.inStock) { %>
                                    <td class="text-success" style="font-weight: bold;">In Stock</td>
                                <% } else { %>
                                    <td class="text-danger" style="font-weight: bold;">Out Of Stock</td>
                                <% } %>
                                <td><%= product.category.categoryName %></td>
                                <td><%= product.quantity %></td>
                                <td><%= product.brand %></td>
                                <td><%= product.createdAt %></td>
                                <td><%= product.updatedAt %></td>
                                <td>
                                    <button class="btn">
                                        <i id="edit-product-button" class="fa-solid fa-pen-to-square" data-product-id="<%= product._id %>"></i>
                                    </button>
                                    <button class="btn">
                                        <i id="product-delete-icon" class="text-danger fa-solid fa-trash" data-product-id="<%= product._id %>"></i>
                                    </button>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
  <div class="modal fade" id="imageCropModal" tabindex="-1" aria-labelledby="imageCropModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content bg-dark">
        <div class="modal-header">
          <h5 class="modal-title text-white" id="imageCropModalLabel">ALERT</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
  
        <div style="height:fit-content; width:100%;">
          <div class="row p-2">
            <span class="d-flex justify-content-center font-weight-bold text-white fs-6 p-2 modal-body-alert">
            </span>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" id="cancel_crop_button" class="btn btn-light" style="width:fit-content;"
            data-bs-dismiss="modal">Cancel</button>
          <button style="width: 110px;" id="confirmAction" type="button" class="btn btn-danger">Confirm</button>
        </div>
      </div>
    </div>
  </div>
  <button id="alert-button" class="btn" hidden data-bs-toggle="modal" data-bs-target="#imageCropModal"></button>
  
  <div class="modal fade" id="alertModal" tabindex="-1" aria-labelledby="imageCropModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
      <div class="modal-content bg-dark">
        <div class="modal-header">
          <h5 class="modal-title text-white" id="imageCropModalLabel">ALERT</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
  
        <div style="height:fit-content; width:100%;">
          <div class="row p-2">
            <div class="d-flex justify-content-center align-items-center">
              <div>
                <span class="font-weight-bold text-white fs-6 px-3 me-2 modal-body-msg">
                </span>
              </div>
              <div class="loader">
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" id="cancel_button" class="btn btn-danger text-white" style="width:fit-content;"
            data-bs-dismiss="modal">Cancel</button>
  
        </div>
      </div>
    </div>
  </div>
  <button id="msg-button" hidden class="btn" data-bs-toggle="modal" data-bs-target="#alertModal"></button>
  
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.6/umd/popper.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.min.js"></script>
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const hamBurger = document.querySelector(".toggle-btn");
      hamBurger.addEventListener("click", function () {
        document.querySelector("#sidebar").classList.toggle("expand");
      });
  
    });
  </script>
  